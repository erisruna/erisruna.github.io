{{-  $to_watch_tags := (slice "course" "workshop") -}}
{{- $subtitle := "" -}}

{{- $results :=  where .Site.Pages  ".Params.tags" "in" $to_watch_tags -}}
{{- $index := slice -}}
{{- range $results -}}
 {{- if isset .Params "subtitle"  -}}
    {{- $index = $index | append (dict "title" ((printf "%s %s %s" .Title .Params.subtitle .Content ) | plainify) "url" .Permalink "tags" .Params.tags ) -}}
{{- else -}}
    {{- $index = $index | append (dict "title" ((printf "%s  %s" .Title  .Content ) | plainify) "url" .Permalink "tags" .Params.tags ) -}}
{{- end -}}
{{- end -}}
{{- $index | jsonify -}}
